{
    "manifest_version": 2,

    "name": "NicovideoConcealer",
    "description": "ニコニコ動画で既にチェックした動画のリンクを目立たなくします。",
    "version": "1.0.1",
    "icons": { "128": "icon128.png" },

    "content_scripts": [
        {
            "matches": [
                "http://www.nicovideo.jp/ranking*",
                "http://www.nicovideo.jp/search*",
                "http://www.nicovideo.jp/tag*"
            ],
            "js": ["jquery-2.0.3.min.js", "NicovideoConcealer.js"]
        }
    ]
}
